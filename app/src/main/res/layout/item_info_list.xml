<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/bgSecondary"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/infoItemImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/healingtea_pure"
        android:background="@color/toolbarText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_items"
        android:textSize="18sp"
        android:textColor="@color/toolbarText"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/infoItemImage"
        app:layout_constraintStart_toEndOf="@id/infoItemImage"
        app:layout_constraintBottom_toBottomOf="@id/infoItemImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>